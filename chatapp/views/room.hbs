<div class="container">
    <div class="sideBar">
        <div class="sideHeader">
            <h3>チャットアプリ</h3>
        </div>
        <div class="roomList">
            <p>&#9660; ルーム</p>
            <div class="room-group">
                <input type="radio" onclick="selectRoom('#room00');" id="room00" value="room00" name="chooseRoom"><label for="room00">ホーム</label>
                <input type="radio" onclick="selectRoom('#room01');" id="room01" value="room01" name="chooseRoom"><label for="room01">監督ルーム</label>
                <input type="radio" onclick="selectRoom('#room02');" id="room02" value="room02" name="chooseRoom"><label for="room02">部員ルーム</label>
                <input type="radio" onclick="selectRoom('#room03');" id="room03" value="room03" name="chooseRoom"><label for="room03">Aチーム</label>
                <input type="radio" onclick="selectRoom('#room04');" id="room04" value="room04" name="chooseRoom"><label for="room04">Bチーム</label>
                <input type="radio" onclick="selectRoom('#room05');" id="room05" value="room05" name="chooseRoom"><label for="room05">雑談ルーム</label>
            </div>
        </div>
        <div class="memberList">
            <p>&#9660; メンバー</p>
        </div>
    </div>
    <div class="row">
        <div class="board">
            <h4 id="title">ホーム</h4>
            <div class="room-exit">
                <input type="button" value="退室する" class="common-button room-button" onclick="exit();">
            </div>
        </div>
        <form method="post" action="/" onsubmit="return publish()" id="form1">
            <div class="room-login_user">
                ログインユーザ：{{userName}}さん
                <input id="userName" type="hidden" value="{{userName}}"> <!--userNameを隠して送る -->
            </div>
            <div class="room-thread">
                <div id="thread"></div>
            </div>
            <div class="input-box">
                <div class="room-message">
                    <textarea id="message" rows="4" class="room-message_textarea" placeholder="投稿文を入力してください" autofocus></textarea>
                </div>
                <div class="room-submit">
                    <input type="button" value="投稿" id="exe_btn" class="common-button room-button" onclick="publish();">
                    <input type="button" value="メモ" class="common-button room-button" onclick="memo();">
                </div>
            </div>
            
        </form>
    </div>
</div>
<div id="thread"></div>

